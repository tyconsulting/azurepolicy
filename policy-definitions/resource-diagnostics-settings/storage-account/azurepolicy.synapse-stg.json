{
  "name": "synapse-diagnostic-settings-stg-policyDef",
  "properties": {
    "displayName": "Apply diagnostic settings for Azure Synapse SQL Pool - Storage Account",
    "description": "This policy automatically deploys and enable diagnostic settings to Storage Account",
    "metadata": {
      "category": "Monitoring",
      "version": "2.0.0",
      "preview": false,
      "depreciated": false
    },
    "mode": "all",
    "parameters": {
      "profileName": {
        "type": "string",
        "metadata": {
          "displayName": "Profile name",
          "description": "The diagnostic settings profile name"
        },
        "defaultValue": "setByPolicyStgAcct"
      },
      "storageAccount": {
        "type": "string",
        "metadata": {
          "displayName": "Storage Account reference",
          "description": "Set the full path (resourceId) to the target storage account for diagnostics events.",
          "assignPermissions": true
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Sql/servers/databases"
          },
          {
            "field": "Microsoft.Sql/servers/databases/sku.tier",
            "matchInsensitively": "DataWarehouse"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Insights/diagnosticSettings",
          "evaluationDelay": "[parameters('evaluationDelay')]",
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/749f88d5-cbae-40b8-bcfc-e573ddc772fa",
            "/providers/microsoft.authorization/roleDefinitions/92aaf0da-9dab-42b6-94a3-d43ce8d16293"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
                "equals": "True"
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/metrics.enabled",
                "equals": "True"
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/storageAccountId",
                "matchInsensitively": "[parameters('storageAccount')]"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "profileName": {
                    "type": "string"
                  },
                  "resourceName": {
                    "type": "string"
                  },
                  "storageAccount": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  }
                },
                "variables": {},
                "resources": [
                  {
                    "type": "Microsoft.Sql/servers/databases/providers/diagnosticSettings",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat(parameters('resourceName'), '/', 'Microsoft.Insights/', parameters('profileName'))]",
                    "location": "[parameters('location')]",
                    "dependsOn": [],
                    "properties": {
                      "storageAccountId": "[parameters('storageAccount')]",
                      "metrics": [
                        {
                          "category": "Basic",
                          "enabled": true,
                          "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                          }
                        },
                        {
                          "category": "InstanceAndAppAdvanced",
                          "enabled": true,
                          "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                          }
                        },
                        {
                          "category": "WorkloadManagement",
                          "enabled": true,
                          "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                          }
                        }
                      ],
                      "logs": [
                        {
                          "category": "DmsWorkers",
                          "enabled": true
                        },
                        {
                          "category": "ExecRequests",
                          "enabled": true
                        },
                        {
                          "category": "RequestSteps",
                          "enabled": true
                        },
                        {
                          "category": "SqlRequests",
                          "enabled": true
                        },
                        {
                          "category": "Waits",
                          "enabled": true
                        }
                      ]
                    }
                  }
                ],
                "outputs": {}
              },
              "parameters": {
                "profileName": {
                  "value": "[parameters('profileName')]"
                },
                "storageAccount": {
                  "value": "[parameters('storageAccount')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "resourceName": {
                  "value": "[field('fullName')]"
                }
              }
            }
          }
        }
      }
    }
  }
}